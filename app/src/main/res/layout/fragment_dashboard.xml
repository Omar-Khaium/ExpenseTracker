<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp"         android:clickable="true"         android:foreground="?attr/selectableItemBackground"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fragment_dashboard_profile_picture"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/ic_person" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_dashboard_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Name" />

                <TextView
                    android:id="@+id/fragment_dashboard_profile_monthly_total_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Total deposit" />

                <TextView
                    android:id="@+id/fragment_dashboard_profile_monthly_total_expensen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Total expensen" />

                <TextView
                    android:id="@+id/fragment_dashboard_profile_daily_budget_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Daily budget left" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>